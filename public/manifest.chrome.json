{
    "manifest_version": 3,
    "name": "BlueSky Edit",
    "version": "0.1.4",
    "description": "Adds an Edit function to the post menu on bsky.app.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://bsky.app/*",
        "https://bsky.social/*"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon48.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://bsky.app/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}
